<Page xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ignore="http://www.galasoft.ch/ignore"
      xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:core="using:Microsoft.Xaml.Interactions.Core"
      x:Class="WinPhoneClient.MainPage"
      mc:Ignorable="d ignore"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
      DataContext="{Binding Main, Source={StaticResource Locator}}">

    <Grid>
        <Hub>
            <HubSection>
                <HubSection.Header>
                    <StackPanel Grid.Row="0" Margin="19,0,0,0">
                        <TextBlock x:Uid="Header" Text="Windows Phone client" 
                                   Style="{ThemeResource TitleTextBlockStyle}" 
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="MAP" Margin="0,-6.5,0,5" 
                                   Style="{ThemeResource HeaderTextBlockStyle}" 
                                   TextWrapping="NoWrap" 
                                   CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />
                    </StackPanel>
                </HubSection.Header>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Maps:MapControl Grid.Row="0"
                            Center="{Binding MapCenterGeopoint, Mode=TwoWay}"
                            Name="MainMap" 
                            ZoomLevel="{Binding ZoomLavel, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                            MapServiceToken="ArI68MgTvnNeI6ql1ulSeWxwHDRSTjOdkhowekMZNOgKEy-pMLxl8mzM9tAPihwH">
                            <ContentControl x:Name="UserPointPossition"
                                            ContentTemplate="{StaticResource UserPushpinControl}" 
                                            Maps:MapControl.Location="{Binding UserPossition}" 
                                            Visibility="{Binding UserPointVisibility}"/>
                            <Maps:MapItemsControl
                                x:Name="DronePoints"
                                ItemsSource="{Binding Drones}"
                                ItemTemplate="{StaticResource DronePushpinControl}"/>
                        </Maps:MapControl>
                        <StackPanel Grid.Row="1">
                            <Grid Visibility="{Binding SettingsVisibility}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" MinWidth="200"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Center item:" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18"/>
                                <ComboBox Grid.Row="0" Grid.Column="1" 
                                          VerticalAlignment="Center"
                                          Margin="10,5"
                                          ItemsSource="{Binding MapItemNamesCollection}"
                                          SelectedItem="{Binding SelectedMapItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Zoom:" VerticalAlignment="Center" FontSize="18"/>
                                <Slider Grid.Row="1" Grid.Column="1"
                                        VerticalAlignment="Center"
                                        Margin="5,15,5,0"
                                        Minimum="1" 
                                        Maximum="20"
                                        Value="{Binding ZoomLavel, Mode=TwoWay}"/>
                            </Grid>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <AppBarButton HorizontalAlignment="Center" Command="{Binding ShowSettingsCommand}">
                                    <AppBarButton.Icon>
                                        <BitmapIcon UriSource="Assets/settings.png" Height="20"/>
                                    </AppBarButton.Icon>
                                </AppBarButton>
                                <AppBarButton HorizontalAlignment="Center" Command="{Binding MoveToCenterCommand}">
                                    <AppBarButton.Icon>
                                        <BitmapIcon UriSource="Assets/center.png" Height="20"/>
                                    </AppBarButton.Icon>
                                </AppBarButton>
                            </StackPanel>
                        </StackPanel>
                        
                    </Grid>
                </DataTemplate>
            </HubSection>
            
            <HubSection>
                <HubSection.Header>
                    <StackPanel Grid.Row="0" Margin="19,0,0,0">
                        <TextBlock x:Uid="Header" Text="Windows Phone client" 
                                   Style="{ThemeResource TitleTextBlockStyle}" 
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="STREAMS" Margin="0,-6.5,0,26.5" 
                                   Style="{ThemeResource HeaderTextBlockStyle}" 
                                   TextWrapping="NoWrap" 
                                   CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}" />
                    </StackPanel>
                </HubSection.Header>
                <DataTemplate>
                    <ListView 
                        AutomationProperties.AutomationId="ItemListViewSection3"
                        AutomationProperties.Name="Items In Group"
                        SelectionMode="None"
                        IsItemClickEnabled="True"
                        ContinuumNavigationTransitionInfo.ExitElementContainer="True"
                        ItemsSource="{Binding Drones}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border>
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding IconColor}"/>
                                        </Border.Background>
                                        <Image Width="79" Height="79" Source="{Binding DroneIcon}"/>
                                    </Border>
                                    <!--<Border Background="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" Margin="0,9.5,0,0" Width="79" Height="79">
                                        
                                    </Border>-->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="14.5,0,0,0">
                                        <TextBlock Text="{Binding DroneType}" Style="{ThemeResource ListViewItemTextBlockStyle}"/>
                                        <TextBlock Text="{Binding Task}" Style="{ThemeResource ListViewItemContentTextBlockStyle}" Foreground="{ThemeResource PhoneMidBrush}"/>
                                        <TextBlock Text="{Binding FormatedPossition}" Style="{ThemeResource ListViewItemSubheaderTextBlockStyle}"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection>
                <HubSection.Header>
                    <StackPanel Grid.Row="0" Margin="19,0,0,0">
                        <TextBlock x:Uid="Header" Text="Windows Phone client" 
                                   Style="{ThemeResource TitleTextBlockStyle}" 
                                   Margin="0,12,0,0"/>
                        <TextBlock Text="SETTINGS" Margin="0,-6.5,0,26.5" 
                                   Style="{ThemeResource HeaderTextBlockStyle}" 
                                   TextWrapping="NoWrap" 
                                   CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
                    </StackPanel>
                </HubSection.Header>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Text="Server IP" 
                                   Style="{ThemeResource BaseTextBlockStyle}" 
                                   VerticalAlignment="Center"
                                   Margin="5,0"/>
                        <TextBox Grid.Row="0" Grid.Column="1"
                                 Margin="5"
                                 InputScope="Number"
                                 Text="{Binding Ip, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Port" 
                                   Style="{ThemeResource BaseTextBlockStyle}" 
                                   VerticalAlignment="Center"
                                   Margin="5,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1"
                                 Margin="5"
                                 InputScope="Number"
                                 Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"/>
                    </Grid>
                </DataTemplate>
            </HubSection>
        </Hub>
    </Grid>
</Page>
